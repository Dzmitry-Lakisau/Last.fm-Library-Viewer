<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/nav_header"
    android:layout_gravity="top"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/nav_header_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/user_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:shadowColor="@android:color/white"
        android:shadowRadius="12"
        android:layout_alignLeft="@id/nav_header_image"
        android:layout_alignBottom="@id/nav_header_image"
        android:layout_marginLeft="@dimen/text_margin" />


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:shadowColor="@android:color/white"
        android:shadowRadius="12"
        android:layout_alignLeft="@id/user_registered"
        android:layout_above="@id/user_registered"
        />



</RelativeLayout>
