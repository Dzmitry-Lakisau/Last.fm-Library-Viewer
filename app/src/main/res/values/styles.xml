<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorTertiary">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimary">@color/light_red</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@color/light_red</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggleStyle</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorButtonNormal">@color/dark_red</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
    </style>

    <style name="AppTheme.OverFlow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_minor</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/light_red</item>

        <item name="colorAccent">#000000</item>
    </style>

    <style name="DialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Large</item>
    </style>

    <style name="MyDrawerArrowToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="PopupMenu"  parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/light_red</item>
    </style>

    <style name="MyMenuText">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:itemBackground">@color/dark_red</item>
    </style>

    <style name="CustomBetterPickersDialogs" parent="BetterPickersDialogFragment">
        <item name="bpPreHeaderBackgroundColor">@color/bpTransparent</item>
        <item name="bpHeaderBackgroundColor">@color/dark_red</item>
        <item name="bpHeaderSelectedTextColor">@color/black</item>
        <item name="bpHeaderUnselectedTextColor">@android:color/black</item>
        <item name="bpBodyBackgroundColor">@color/light_red</item>
        <item name="bpBodySelectedTextColor">@color/black</item>
        <item name="bpBodyUnselectedTextColor">@android:color/white</item>
        <item name="bpButtonsBackgroundColor">@color/dark_red</item>
        <item name="bpButtonsTextColor">@color/black</item>

        <item name="bpRadialBackgroundColor">@color/dark_red</item>
        <item name="bpRadialTextColor">@color/black</item>
        <item name="bpRadialPointerColor">@android:color/black</item>
        <item name="bpAmPmCircleColor">@color/dark_red</item>
    </style>
</resources>
