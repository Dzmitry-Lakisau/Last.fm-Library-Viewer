<resources>

    <style name="BaseTheme" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black_2</item>
        <item name="android:textColorTertiary">?android:attr/textColorSecondary</item>

        <item name="android:textColorPrimaryInverse">?android:attr/colorPrimary</item>
        <item name="android:textColorSecondaryInverse">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorTertiaryInverse">?android:attr/textColorPrimaryInverse</item>

        <item name="colorPrimary">@color/md_red_900</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:colorBackground">?android:attr/colorPrimary</item>
        <item name="android:windowBackground">@color/md_red_900</item>

        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppTheme.OverFlow">
        <item name="android:src">@drawable/ic_menu_overflow_black_96dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/dark_red</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/light_red</item>
    </style>

    <style name="CustomBetterPickersDialogs" parent="BetterPickersDialogFragment">
        <item name="bpPreHeaderBackgroundColor">@color/bpTransparent</item>
        <item name="bpHeaderBackgroundColor">@color/dark_red</item>
        <item name="bpHeaderSelectedTextColor">@color/black</item>
        <item name="bpHeaderUnselectedTextColor">@android:color/black</item>
        <item name="bpBodyBackgroundColor">@color/light_red</item>
        <item name="bpBodySelectedTextColor">@color/black</item>
        <item name="bpBodyUnselectedTextColor">@android:color/white</item>
        <item name="bpButtonsBackgroundColor">@color/dark_red</item>
        <item name="bpButtonsTextColor">@color/black</item>

        <item name="bpRadialBackgroundColor">@color/dark_red</item>
        <item name="bpRadialTextColor">@color/black</item>
        <item name="bpRadialPointerColor">@android:color/black</item>
        <item name="bpAmPmCircleColor">@color/dark_red</item>
    </style>
</resources>
